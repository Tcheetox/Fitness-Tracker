
<div class='card form-wrapper'>
  <div class='card-body'>
  
    <div class='card-title'>
      <h2>Forgot your password?</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  
        <p>No worries we got you covered!</p>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => 'Email' %>
        </div>

        <div class="form-group register-group">
          <%= f.submit "Send the instructions", :class => 'btn btn-primary' %>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>

    </div>
</div>