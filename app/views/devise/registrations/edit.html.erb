<%= javascript_tag 'adjustProfile()' %>

<div class='card form-wrapper'>
<div class='card-body'>

  <div class='card-title'>
    <h2>Edit profile</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="form-group row">
      <%= f.label :first_name, :class => 'col-form-label' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", :class => 'form-control custom-input', 'disabled' => 'input', :style => "width: #{resource["first_name"].length}ch;" %>
      <%= fa_icon "user-edit", "for" => "#{resource_name}_#{:first_name}" %>
    </div>

    <div class="form-group row">
      <%= f.label :last_name, :class => 'col-form-label' %>
      <%= f.text_field :last_name, autocomplete: "family-name", :class => 'form-control custom-input', 'disabled' => 'input', :style => "width: #{resource["last_name"].length}ch;" %>
      <%= fa_icon "user-edit", "for" => "#{resource_name}_#{:last_name}" %>
    </div>

    <div class="form-group row">
      <%= f.label :gender, :class => 'col-form-label' %>
      <%= f.select(:gender, options_for_select(['']  + User.genders.keys.map {|gender| [gender.humanize, gender]}, resource["gender"]), {}, {:class => 'form-control custom-input', :disabled => true, :style => "width: #{User.genders.keys.max_by(&:size).length}ch;"}) %>
      <%= fa_icon "user-edit", "for" => "#{resource_name}_#{:gender}"  %>
    </div>

    <div class="form-group row">
      <%= f.label :phone, "Phone*", :class => 'col-form-label' %>
      <%= f.text_field :phone, autocomplete: "phone", :class => 'form-control custom-input', 'disabled' => 'input', :style => "width: #{resource["phone"].length}ch;" %>
      <%= fa_icon "user-edit", "for" => "#{resource_name}_#{:phone}"  %>
    </div>
    
    <div class="form-group row">
      <%= f.label :country, :class => 'col-form-label' %>
      <%= f.text_field :country, autocomplete: "country", :class => 'form-control custom-input', 'disabled' => 'input', :style => "width: #{resource["country"].length}ch;" %>
      <%= fa_icon "user-edit", "for" => "#{resource_name}_#{:country}"  %>
    </div>

    <div class="form-group register-group">
      <%= f.submit "Update", :class => 'btn btn-primary' %>
    </div>

    <hr />

    <small class="form-text text-muted">*Lorem Ipsum Set Fluctuat Nec Mergitur</small>

  <% end %>

  </div>
</div>

<div class='card form-wrapper form-profile'>
<div class='card-body'>

<h2>Change user</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Delete account</h3>

<p>Unhappy? <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  </div>
</div>