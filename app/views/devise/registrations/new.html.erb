<div class='card form-wrapper'>
  <div class='card-body'>
  
    <div class='card-title'>
      <h2>Sign up</h2>
    </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => 'Email' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :placeholder => 'Password' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted <%= resource.errors.messages[:password].to_s.include?('short') ? 'text-red':'' %>">Choose a strong password with <%= @minimum_password_length %> characters minimum.</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :placeholder => 'Confirm password' %>
          <small class="form-text text-muted text-red"><%= !resource.errors.messages[:password_confirmation].blank? ? "Confirmation password doesn't match." : "" %></small>
        </div>

        <div class="form-group register-group">
          <%= f.submit "Register", :class => 'btn btn-primary' %>
        </div>

        <small class="form-text text-muted text-center">By signing up for Move & Groove, you agree to the 
        <%= link_to "Terms of Service", root_path %>. View our <%= link_to "Privacy Policy", root_path %>.</small>

      <% end %>
      <%= render "devise/shared/links" %>

    </div>
</div>
